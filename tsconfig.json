{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/src/*"],
      "@/shared/*": ["./shared/*"],
      "@/backend/*": ["./backend/src/*"]
    }
  },
  "include": [
    "frontend/**/*",
    "backend/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 